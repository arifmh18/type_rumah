<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:background="?attr/selectableItemBackground"
                                             android:id="@+id/itemList">

    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="10dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/gambarProduct"
            android:scaleType="centerCrop"
            app:srcCompat="@mipmap/ic_launcher_round"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
            android:layout_width="0dp"
              android:text="Nama Type"
              android:layout_height="wrap_content"
              android:textSize="14sp"
              android:textStyle="bold"
              android:textColor="#000"
              android:id="@+id/JudulBarang"
              android:layout_marginTop="10dp"
              app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/gambarProduct"
              android:layout_marginStart="10dp" android:layout_marginEnd="10dp"
              app:layout_constraintEnd_toEndOf="parent"/>

    <TextView android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:text="Deskripsi"
              android:textColor="#777777"
              android:id="@+id/Deskripsi"
              android:layout_marginTop="5dp"
              app:layout_constraintTop_toBottomOf="@+id/JudulBarang"
              app:layout_constraintStart_toEndOf="@+id/gambarProduct"
              android:layout_marginStart="10dp"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="10dp"
              android:textSize="12sp"
              android:textStyle="italic"/>
    <TextView android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:text="Rp. xxx.xxx.xxx"
              android:textColor="#777777"
              android:id="@+id/Harga"
              android:layout_marginTop="5dp"
              app:layout_constraintTop_toBottomOf="@+id/Deskripsi"
              app:layout_constraintStart_toEndOf="@+id/gambarProduct"
              android:layout_marginStart="10dp"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="10dp"
              android:textSize="12sp"
              android:textStyle="italic"/>

    <View android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="#ccc"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          android:layout_marginStart="8dp"
          android:layout_marginEnd="8dp"
          android:id="@+id/view3"
          app:layout_constraintHorizontal_bias="1.0" 
          app:layout_constraintBottom_toBottomOf="parent"
          android:layout_marginTop="12dp"/>

</android.support.constraint.ConstraintLayout>